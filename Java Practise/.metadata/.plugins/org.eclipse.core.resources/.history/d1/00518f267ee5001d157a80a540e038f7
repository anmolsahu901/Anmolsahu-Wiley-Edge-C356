package JavaThreads;

class Demo implements Runnable{

	@Override
	public void run() {
		System.out.println("Thread Name : "+Thread.currentThread());
	}

	
	
	
}

public class A4ThreadGroups {
	public static void main(String[] args) {
		//Created groups not threads
		ThreadGroup tgParent1 = new ThreadGroup("Parent Group");
		ThreadGroup tgChild1 = new ThreadGroup(tgParent1,"Child group");
		
		//creating thread
		Thread t1 = new Thread(tgParent1,new Demo(),"First");
		Thread t2 = new Thread(tgParent1,new Demo(),"Second");
		Thread t3 = new Thread(tgParent1,new Demo(),"Second");

		t1.start();
		t2.start();
		t3.start();
		
		System.out.println("Active group of Threads :-"+tgParent1.activeCount());
	}
}








